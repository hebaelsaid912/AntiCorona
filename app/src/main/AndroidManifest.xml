<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid_19">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.covid_19.CoronaScale"></activity>
        <activity android:name="com.example.covid_19.Healthyfood" />
        <activity android:name="com.example.covid_19.Sports" />
        <activity android:name="com.example.covid_19.Advices" />
        <activity android:name="com.example.covid_19.dailyCheckUp_4" />
        <activity android:name="com.example.covid_19.dailyCheckUp_3" />
        <activity android:name="com.example.covid_19.dailyCheckUp_2" />
        <activity android:name="com.example.covid_19.dailyCheckUp_1" />
        <activity android:name="com.example.covid_19.Home" />
        <activity android:name="com.example.covid_19.signIN" />
        <activity android:name="com.example.covid_19.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>